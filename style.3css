body{
    font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
    margin: 0px;
    padding: 0px;
}
main{
    display: grid;
    grid-template-columns: 1fr 3fr 1fr 2fr;
    grid-column-gap: 10px;
    grid-row-gap: 10px;
}
.item{
    background-color: blue;
    color: antiquewhite;
    padding: 50px 20px;
    text-align: center;
}
